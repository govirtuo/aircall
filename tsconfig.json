{
    "compilerOptions": {
      "target": "es2020",
      "lib": [
        "es2020"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "allowJs": true,
      "strict": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": [
      "lib/**/*",
      "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  